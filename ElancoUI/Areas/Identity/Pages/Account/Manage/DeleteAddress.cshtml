@page
@model ElancoUI.Areas.Identity.Pages.Account.Manage.DeleteAddressModel
@{
    ViewData["Title"] = "Delete Address";
    ViewData["ActivePage"] = ManageNavPages.Index;
}

<form id="profile-form" method="post" class="account-contents">
    <h1>Are you sure you want to delete this address?</h1>
    <div class="account-cards">
        <input asp-for="Address.Id" type="hidden" />
        <div class="account-card">
            <div class="account-card-field">
                <div class="form-field">
                    <label asp-for="Address.AddressLine1" class="form-label">Address</label>
                    <input asp-for="Address.AddressLine1" class="form-control" />
                </div>
                <div class="form-field">
                    <label asp-for="Address.City" class="form-label">City</label>
                    <input asp-for="Address.City" class="form-control" />
                </div>
                <div class="form-field">
                    <label asp-for="Address.State" class="form-label">State</label>
                    <input asp-for="Address.State" class="form-control" />
                </div>
                <div class="form-field">
                    <label asp-for="Address.ZipCode" class="form-label">Zip Code</label>
                    <input asp-for="Address.ZipCode" class="form-control" />
                </div>
            </div>
        </div>
    </div>
    <div class="account-save">
        <button>Cancel</button>
        <button class="delete-button" id="update-profile-button" type="submit">Delete address</button>
    </div>
</form>