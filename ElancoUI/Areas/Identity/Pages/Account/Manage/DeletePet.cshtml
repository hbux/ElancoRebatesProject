@page
@model ElancoUI.Areas.Identity.Pages.Account.Manage.DeletePetModel
@{
    ViewData["Title"] = "Confirm Pet Deletion";
    ViewData["ActivePage"] = ManageNavPages.Index;

    string imagePath = System.IO.Path.Combine("storage", "account_pets", Model.Pet.ImageName);
}

<form id="profile-form" method="post" class="account-contents">
    <h1>Are you sure you want to delete this pet information?</h1>
    <div class="account-cards">
        <input asp-for="Pet.Id" type="hidden" />
        <div class="account-card">
            <div class="account-card-field">
                <div class="form-field">
                    <label asp-for="Pet.Name" class="form-label">Pet Name</label>
                    <input asp-for="Pet.Name" class="form-control" disabled />
                </div>
                <div class="form-field">
                    <img src="@imagePath" width="140" height="110" />
                </div>
            </div>
        </div>
    </div>
    <div class="account-save">
        <a asp-page="./Index">Cancel</a>
        <button class="delete-button" id="update-profile-button" type="submit">Delete pet</button>
    </div>
</form>