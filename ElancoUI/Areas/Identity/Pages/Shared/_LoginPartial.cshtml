@using Microsoft.AspNetCore.Identity
@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@if (SignInManager.IsSignedIn(User))
{
    <a class="header-cta" asp-area="Identity" asp-page="/Account/Manage/Index">Account</a>
    <form method="post" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="/">
        <button class="header-cta" type="submit" >Log Out</button>
    </form>
}
else
{
    <a class="header-cta" asp-area="Identity" asp-page="/Account/Login"><span class="header-cta-short">Account</span><span class="header-cta-long">Log In</span></a>
    <a class="header-cta" asp-area="Identity" asp-page="/Account/Register">Register</a>
}